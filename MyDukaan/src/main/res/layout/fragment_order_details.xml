                            app:layout_constraintStart_toEndOf="@+id/guideline19"
                            app:layout_constraintTop_toBottomOf="@+id/txt_total_mrp" />

                        <TextView
                            android:id="@+id/txt_coupon_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="end"
                            android:text="0"
                            android:textColor="#000"
                            android:textSize="12dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/guideline19"
                            app:layout_constraintTop_toBottomOf="@+id/txt_discount_price" />

                        <TextView
                            android:id="@+id/txt_shipping_cahrge"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="end"
                            android:text="0"
                            android:textColor="#000"
                            android:textSize="12dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/guideline19"
                            app:layout_constraintTop_toBottomOf="@+id/txt_coupon_price" />

                        <TextView
                            android:id="@+id/txt_grand_total"
