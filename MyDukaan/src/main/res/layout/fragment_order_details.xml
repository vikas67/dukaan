                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:padding="2sp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2sp"
                        android:layerType="software"
                        android:src="@drawable/dotted" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="horizontal"
                    android:padding="8dp">


                    <TextView
                        android:id="@+id/txt_order_Date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="Order Date"
                        android:textColor="#33B0E0"
                        android:textSize="10dp"
                        app:layout_constraintBottom_toTopOf="@+id/txt_date"
                        app:layout_constraintEnd_toStartOf="@+id/guideline22"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="12 JAN 2021"
                        android:textColor="#000"
                        android:textSize="12dp"
                        app:layout_constraintEnd_toStartOf="@+id/guideline22"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_order_Date" />

                    <TextView
                        android:id="@+id/txt_order_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="end"
                        android:text="Order Time"
                        android:textColor="#33B0E0"
                        android:textSize="10dp"
                        app:layout_constraintBottom_toTopOf="@+id/txt_time"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/guideline22"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="end"
                        android:text="4:14 PM"
                        android:textColor="#000"
                        android:textSize="12dp"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_order_time" />


                    <TextView
                        android:id="@+id/txt_sAddres"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:text="Shipping Address"
                        android:textColor="#33B0E0"
                        android:textSize="10dp"
                        app:layout_constraintBottom_toTopOf="@+id/txt_shipping_address"
                        app:layout_constraintEnd_toStartOf="@+id/guideline22"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_date" />

                    <TextView
                        android:id="@+id/txt_shipping_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="8dp"
                        android:gravity="start"
                        android:text="MIG-697 NEW HOUSING BOARD COLONY MORENA MADHYA PRADESH"
                        android:textColor="#000"
                        android:textSize="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_sAddres" />


                    <TextView
                        android:id="@+id/txt_baddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="end"
                        android:text="Billing Address"
                        android:textColor="#33B0E0"
                        android:textSize="10dp"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toTopOf="@+id/txt_billing_address"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/guideline22"
                        app:layout_constraintTop_toBottomOf="@+id/txt_time" />

                    <TextView
                        android:id="@+id/txt_billing_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="end"
                        android:text="MIG-697 NEW HOUSING BOARD COLONY MORENA MADHYA PRADESH"
                        android:textColor="#000"
                        android:textSize="12dp"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline22"
                        app:layout_constraintTop_toBottomOf="@+id/txt_baddress" />


                    <TextView
                        android:id="@+id/txt_number_item"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="end"
                        android:text="Number Of Item"
                        android:textColor="#33B0E0"
                        android:textSize="10dp"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toTopOf="@+id/txt_number_of_item"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/guideline22"
                        app:layout_constraintTop_toBottomOf="@+id/txt_billing_address" />

                    <TextView
                        android:id="@+id/txt_number_of_item"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="4"
                        android:textColor="#000"
                        android:textSize="12dp"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/guideline22"
                        app:layout_constraintTop_toBottomOf="@+id/txt_number_item" />


                    <TextView
                        android:id="@+id/txt_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:text="Payment Method"
                        android:textColor="#33B0E0"
                        android:textSize="10dp"
                        app:layout_constraintBottom_toTopOf="@+id/txt_payment_metod"
                        app:layout_constraintEnd_toStartOf="@+id/UserName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_shipping_address" />


                    <TextView
                        android:id="@+id/UserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Payment Method"
                        android:textColor="#33B0E0"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="10dp"
                        app:layout_constraintBottom_toTopOf="@+id/txt_payment_metod"
                        app:layout_constraintLeft_toRightOf="@+id/txt_payment"
                        app:layout_constraintTop_toBottomOf="@+id/txt_shipping_address" />


                    <TextView
                        android:id="@+id/txt_payment_metod"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="Cash On Delivery"
                        android:textColor="#000"
                        android:textSize="12dp"
                        app:layout_constraintEnd_toStartOf="@+id/guideline22"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_payment" />


                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:padding="4dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dotted_border"

                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/txt_mrp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MRP Total"
                            android:textSize="12dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Discount"
                            android:textSize="12dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/txt_mrp" />

                        <TextView
                            android:id="@+id/couponoff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Coupon off"
                            android:textSize="12dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/discount" />

                        <TextView
                            android:id="@+id/txt_ship_char"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Shipping Charge"
                            android:textSize="12dp"
                            app:layout_constraintEnd_toStartOf="@+id/guideline19"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/couponoff" />

                        <TextView
                            android:id="@+id/grand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grand Total"
                            android:textColor="#000"
                            android:textSize="12dp"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/txt_ship_char" />


                        <!--right side text-->


                        <TextView
                            android:id="@+id/txt_total_mrp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="27,998"
                            android:textColor="#000"
                            android:textSize="12dp"
