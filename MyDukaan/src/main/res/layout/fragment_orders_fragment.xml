<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ginny_fragment.orders.FragmentOrders">

     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">


         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="15dp"
             android:id="@+id/topview"
             android:background="@color/blue_color"
             tools:ignore="MissingConstraints" >

             <TextView
                 android:layout_width="wrap_content"
                 android:text="ORDRES"
                 android:fontFamily="@font/lato_bold"
                 android:textSize="40px"
                 android:textColor="@color/white"
                 android:layout_centerInParent="true"
                 android:layout_height="wrap_content"/>

             <ImageView
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:layout_alignParentRight="true"
                 android:src="@drawable/ic_baseline_search_24_white"/>

         </RelativeLayout>


         <LinearLayout
             android:layout_width="match_parent"
             android:paddingTop="10dp"
             android:orientation="horizontal"
             android:weightSum="5"
             android:gravity="center_vertical"
             android:id="@+id/menu"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             app:layout_constraintTop_toBottomOf="@id/topview"
             android:layout_height="wrap_content">

         <TextView
             android:layout_width="70dp"
             android:text="All"
             android:textAlignment="center"
             android:paddingLeft="5dp"
             android:paddingRight="5dp"
             android:paddingTop="10dp"
             android:paddingBottom="10dp"
             android:id="@+id/all"
             android:tag="button"
             android:textSize="20px"
             android:layout_weight="1"
             android:textColor="@color/white"
             android:background="@drawable/round_corner"
             android:fontFamily="@font/lato_regular"
             android:layout_height="wrap_content"
             tools:ignore="MissingConstraints" />

             <TextView
                 android:layout_width="70dp"
                 android:text="Pending"
                 android:textAlignment="center"
                 android:paddingLeft="5dp"
                 android:paddingRight="5dp"
                 android:paddingTop="10dp"
                 android:paddingBottom="10dp"
                 android:id="@+id/pending"
                 android:textSize="20px"
                 android:layout_marginLeft="5dp"
                 android:layout_weight="1"
                 android:tag="button"
                 android:textColor="@color/light_black"
                 android:background="@drawable/transparent_round_corner"
                 android:fontFamily="@font/lato_regular"
                 android:layout_height="wrap_content"
                 tools:ignore="MissingConstraints" />
             <TextView
                 android:layout_width="70dp"
                 android:text="Accepted"
                 android:textAlignment="center"
                 android:paddingLeft="5dp"
                 android:paddingRight="5dp"
                 android:paddingTop="10dp"
                 android:paddingBottom="10dp"
                 android:id="@+id/accepted"
                 android:layout_marginLeft="5dp"
                 android:layout_weight="1"
                 android:textSize="20px"
                 android:tag="button"
                 android:textColor="@color/light_black"
                 android:background="@drawable/transparent_round_corner"
                 android:fontFamily="@font/lato_regular"
                 android:layout_height="wrap_content"
                 tools:ignore="MissingConstraints" />

             <TextView
                 android:layout_width="70dp"
                 android:text="Rejected"
                 android:textAlignment="center"
                 android:paddingLeft="5dp"
                 android:paddingRight="5dp"
                 android:paddingTop="10dp"
                 android:paddingBottom="10dp"
                 android:textSize="20px"
                 android:id="@+id/rejected"
                 android:layout_marginLeft="5dp"
                 android:layout_weight="1"
                 android:tag="button"
                 android:textColor="@color/light_black"
                 android:background="@drawable/transparent_round_corner"
                 android:fontFamily="@font/lato_regular"
                 android:layout_height="wrap_content"
                 tools:ignore="MissingConstraints" />

             <TextView
                 android:layout_width="70dp"
                 android:text="Shipped"
                 android:textAlignment="center"
                 android:paddingLeft="5dp"
                 android:paddingRight="5dp"
                 android:paddingTop="10dp"
                 android:paddingBottom="10dp"
                 android:layout_weight="1"
                 android:id="@+id/shipped"
                 android:textSize="20px"
                 android:tag="button"
                 android:layout_marginLeft="5dp"
                 android:textColor="@color/light_black"
                 android:background="@drawable/transparent_round_corner"
                 android:fontFamily="@font/lato_regular"
                 android:layout_height="wrap_content"
                 tools:ignore="MissingConstraints" />


         </LinearLayout>



         <androidx.recyclerview.widget.RecyclerView
             android:layout_width="match_parent"
             android:layout_marginTop="10dp"
             android:id="@+id/recycle"
             android:paddingBottom="120dp"
             android:clipToPadding="false"
             android:scrollbarStyle="outsideOverlay"
             android:orientation="vertical"
             android:background="@color/market_back"
             app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
             app:layout_constraintTop_toBottomOf="@id/menu"
             android:layout_height="wrap_content"/>






     </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>