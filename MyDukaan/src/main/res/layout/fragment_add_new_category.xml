<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.addcategory.AddNewCategoryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:padding="20dp"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="100dp"
                android:gravity="center"
                android:background="@drawable/camera_border"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="40dp"
                    android:src="@drawable/ic_baseline_camera_alt_24"
                    android:layout_height="40dp"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_light"
                android:text="@string/title_categoryimage"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/white"
                    android:padding="5dp"
                    android:text="@string/title_productname">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:foregroundTint="@color/gray"
                        android:text=""
                        android:hint="@string/title_productname"
                        />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>



        </LinearLayout>




    </ScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:id="@+id/save"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">



        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/title_create"
            android:textColor="@color/white"
            android:letterSpacing="0.2"
            android:textSize="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:shadowRadius="10"
            android:fontFamily="@font/montserrat_medium"
            android:background="@drawable/save_button_background"/>


    </LinearLayout>


</RelativeLayout>