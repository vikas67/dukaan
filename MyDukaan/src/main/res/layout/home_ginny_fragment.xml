<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".fragment.ginny_fragment.home.HomeGinnyFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Purchase"
            android:textSize="40px"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/semi_light_black"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="@+id/GuideLineStart"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/duraction_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/GuideLineEnd"
            app:layout_constraintTop_toTopOf="@+id/overview">

            <TextView
                android:id="@+id/duraction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="View all"
                android:textSize="30px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/bottom_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/bottom_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_baseline_arrow_right_24"
                app:layout_constraintBottom_toBottomOf="@+id/duraction"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/duraction" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="@+id/GuideLineStart"
            app:layout_constraintTop_toBottomOf="@+id/duraction_layout"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingBottom="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/orderview"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_height="90dp">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/one"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:background="@drawable/order_box_corner_round"
                    >
                    <TextView
                        android:id="@+id/order_title"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/blue_color"
                        android:text="Order"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato_semi_bold"
                        android:textSize="12dp"
                        android:letterSpacing="0"
                        android:textColor="@color/white"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:text="50"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="16dp" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/two"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:background="@drawable/order_box_corner_round"
                    >
                    <TextView
                        android:id="@+id/order_title1"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/blue_color"
                        android:text="Pending"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato_semi_bold"
                        android:textSize="12dp"
                        android:letterSpacing="0"
                        android:textColor="@color/white"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:text="50"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="16dp" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/three"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:background="@drawable/order_box_corner_round"
                    >
                    <TextView
                        android:id="@+id/order_title3"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/blue_color"
                        android:text="Spent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato_semi_bold"
                        android:textSize="12dp"
                        android:letterSpacing="0"
                        android:textColor="@color/white"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:text="50"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="16dp" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/four"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:background="@drawable/order_box_corner_round"
                    >
                    <TextView
                        android:id="@+id/order_title4"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/blue_color"
                        android:text="Return"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato_semi_bold"
                        android:textSize="12dp"
                        android:letterSpacing="0"
                        android:textColor="@color/white"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:text="50"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="16dp" />


                </LinearLayout>





            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:id="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/orderview"
            android:background="@color/light_gray"/>



        <TextView
            app:layout_constraintTop_toBottomOf="@+id/view"
            android:id="@+id/seller"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sale"
            android:textSize="40px"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/semi_light_black"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="@+id/GuideLineStart"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view_all"
            app:layout_constraintTop_toBottomOf="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="15dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/GuideLineEnd">

            <TextView
                android:id="@+id/viewall1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="View all"
                android:textSize="30px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/bottom_icon1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/bottom_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_baseline_arrow_right_24"
                app:layout_constraintBottom_toBottomOf="@+id/viewall1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/viewall1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="@+id/GuideLineStart"
            app:layout_constraintTop_toBottomOf="@+id/seller"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingBottom="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/orderview1"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_height="90dp">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/order"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:background="@drawable/order_box_corner_round"
                    >
                    <TextView
                        android:id="@+id/ordername"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/blue_color"
                        android:text="Order"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato_semi_bold"
                        android:textSize="12dp"
                        android:letterSpacing="0"
                        android:textColor="@color/white"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:text="50"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="16dp" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/pendingorder"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:background="@drawable/order_box_corner_round"
                    >
                    <TextView
                        android:id="@+id/pendingorder_title1"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/blue_color"
                        android:text="Pending"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato_semi_bold"
                        android:textSize="12dp"
                        android:letterSpacing="0"
                        android:textColor="@color/white"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:text="50"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="16dp" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/spent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:background="@drawable/order_box_corner_round"
                    >
                    <TextView
                        android:id="@+id/spentorder_title3"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/blue_color"
                        android:text="Spent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato_semi_bold"
                        android:textSize="12dp"
                        android:letterSpacing="0"
                        android:textColor="@color/white"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:text="50"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="16dp" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/returnorder"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:background="@drawable/order_box_corner_round"
                    >
                    <TextView
                        android:id="@+id/returnorder_title4"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/blue_color"
                        android:text="Return"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato_semi_bold"
                        android:textSize="12dp"
                        android:letterSpacing="0"
                        android:textColor="@color/white"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:text="50"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="16dp" />


                </LinearLayout>





            </LinearLayout>


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:id="@+id/view1"
            app:layout_constraintTop_toBottomOf="@+id/orderview1"
            android:background="@color/light_gray"/>




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/view1"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/active"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active Orders"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/semi_light_black"
                    android:textSize="40px"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="View all"
                    android:layout_marginTop="3dp"
                    android:layout_alignParentRight="true"
                    android:letterSpacing="0"
                    android:textColor="@color/light_black"
                    android:id="@+id/viewall"
                    android:drawableRight="@drawable/ic_baseline_arrow_right_24"
                    tools:ignore="MissingConstraints" />


            </RelativeLayout>





            <Button
                android:layout_width="80dp"
                app:layout_constraintTop_toBottomOf="@+id/active"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:text="Pending"
                android:textSize="11dp"
                android:letterSpacing="0"
                android:textAllCaps="false"
                android:textColor="@color/lightgray"
                android:fontFamily="@font/lato_regular"
                android:id="@+id/pending"
                android:backgroundTint="@color/light_gray"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/accepted"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/light_gray"
                android:fontFamily="@font/lato_regular"
                android:text="Accepted"
                android:textAllCaps="false"
                android:textColor="@color/lightgray"
                android:textSize="11dp"
                android:letterSpacing="0"
                android:layout_marginLeft="5dp"
                app:layout_constraintStart_toEndOf="@+id/pending"
                app:layout_constraintTop_toBottomOf="@+id/active"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/shipped"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:backgroundTint="@color/blue_color"
                android:fontFamily="@font/lato_regular"
                android:text="Shipped"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="11dp"
                android:layout_marginLeft="5dp"
                android:letterSpacing="0"
                app:layout_constraintStart_toEndOf="@+id/accepted"
                app:layout_constraintTop_toBottomOf="@+id/active"
                tools:ignore="MissingConstraints" />




            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:id="@+id/recycle"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                android:backgroundTint="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/shipped"
                tools:layout_editor_absoluteX="20dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>




        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/GuideLineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="10dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/GuideLineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="10dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.core.widget.NestedScrollView>

































